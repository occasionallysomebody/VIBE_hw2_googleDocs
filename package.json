{
  "name": "collaborative-text-editor",
  "version": "1.0.0",
  "description": "Thread-safe multi-client text editing web app - Google Docs Ã— Notion",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server.js",
    "dev:client": "vite --port 5173",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "test": "echo \"Run 'npm run dev' and open http://localhost:5173 to test\" && exit 0"
  },
  "keywords": [
    "collaboration",
    "crdt",
    "yjs",
    "websocket",
    "real-time",
    "text-editor",
    "google-docs",
    "notion"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "yjs": "^13.6.8",
    "y-websocket": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "vite": "^5.4.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
